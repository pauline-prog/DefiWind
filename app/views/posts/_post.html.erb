     <div id="<%= post.id %>" class="container post py-6">
        <div class="row justify-content-center">
          <div class="col-12 col-lg-12">
            <% if post.photo != nil %>
            <%= link_to new_like_path(post.id), method: :post do %>
              <i class="far fa-heart"></i>
              <% end %>
              <%= cl_image_tag post.photo.key %>
            <% end %>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-12 col-lg-12 text-justify">
              <p><%= post.title %></p>
              <p><%= post.description %></p>
          </div>
        </div>
      </div>