  <%= render 'components/navbar-top' %>
  <div class="row card_profile m-center2">
    <h4>Modifier mon profil</h4>
    <%= simple_form_for(@user, url: user_path, method: :patch) do |f| %>
      <%= f.input :first_name, label: 'PrÃ©nom', placeholder: 'Oscar', input_html: { class: 'inputFor' } %>
