<div class="profile-photos">
  <% if current_user.avatar.attached? %>
    <%= cl_image_tag current_user.avatar.key, id: "profile-photo" %>
  <% end %>
  <% if current_user.photo.attached? %>
    <%= cl_image_tag current_user.photo.key, id: "background-photo" %>
  <% end %>
  <%= link_to "Se dÃ©connecter", destroy_user_session_path, method: :delete, class: "link" %>
</div>
<div class="container">
  <div class="user-info-profile">
    <% if current_user.username != nil %>
      <% if current_user.username.empty? == false && %>
        <p class="title"><%= current_user.username %> (<%= current_user.first_name %> <%= current_user.last_name %>)</p>
      <% else %>
        <p class="title"><%= current_user.first_name %> <%= current_user.last_name %></p>
      <% end %>
    <% else %>
      <p class="title"><%= current_user.first_name %> <%= current_user.last_name %></p>
    <% end %>
    <% if current_user.location %>
      <p><%= current_user.location %></p>
    <% end %>
    <p>#<%= current_user.race_number %></p>
    <%= link_to edit_user_path(current_user) do %>
      <i class="far fa-edit edit profile"></i>
    <% end %>
  </div>  
  <div class="row">
    <%= line_chart current_user.position_for_graph %>
  </div>
</div>


