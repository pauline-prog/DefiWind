<%= render 'components/navbar-top-back' %>

<div class="bg-pass">
  <h4>Mot de passe oublié ?</h4>
  <div class="row card_pass m-center3">
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: 'inputForm' } %>
      </div>
      <br>
      <div class="form-actions">
        <%= f.button :submit, "Réinitialiser mon mot de passe", class: 'btn-pass mb-4' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

<%= render 'components/navbar-bottom-profile' %>
